    "gulp-watch-sass": "^1.4.1",
    "lazyload": "^2.0.0-rc.2",
    "sanitize.css": "git+https://github.com/csstools/sanitize.css.git"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "browser-sync": "^2.29.1",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.27.5",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
