{
  "name": "developtheme",
  "description": "Komplexní, individuální ACF šablona na míru pro váš web. Vytvořeno s péčí a citem &hearts",
  "author": "czechvisual | Patrik Vaďura",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "gulp",
    "watch:frontend": "sass --watch assets/sass/app.scss public/assets/css/app.css --style compressed",
    "watch:admin": "sass --watch assets/sass/app.scss public/assets/css/app.css --style compressed",
    "lint": "npx stylelint \"**/*.scss\"",
    "watch": "npm run lint && npm run watch:frontend && npm run watch:admin"
  },
  "dependencies": {
    "bootstrap-icons": "^1.9.1",
    "gulp-eslint": "^6.0.0",
    "gulp-sass-lint": "^1.4.0",
